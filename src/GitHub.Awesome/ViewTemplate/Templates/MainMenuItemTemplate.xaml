<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ficon="clr-namespace:GitHub.Awesome.ViewTemplate.Styles;assembly=GitHub.Awesome"
             x:Class="GitHub.Awesome.ViewTemplate.Templates.MainMenuItemTemplate">
    <AbsoluteLayout
        Padding="24,0"
        VerticalOptions="CenterAndExpand"
        HorizontalOptions="FillAndExpand">

        <Label
            HorizontalOptions="Start"
            Text="{ Binding Icon }"
            FontFamily="{x:Static ficon:Fonts.FontAwesome}"
            VerticalTextAlignment="Center"
            AbsoluteLayout.LayoutBounds="0, 0.5, 20, 1"
            AbsoluteLayout.LayoutFlags="XProportional, YProportional, HeightProportional" />

        <Label
            AbsoluteLayout.LayoutBounds="24, 0, 1, 1"
            AbsoluteLayout.LayoutFlags="WidthProportional, HeightProportional"
            Text="{ Binding Name }"
            VerticalTextAlignment="Center"
            Margin="0,0,0,0" />

    </AbsoluteLayout>
</ContentView>
